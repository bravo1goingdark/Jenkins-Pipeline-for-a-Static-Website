pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        S3_BUCKET = 's3-jenkins-static'  
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¦ Cloning repository...'
                git branch: 'main', url: 'https://github.com/bravo1goingdark/Jenkins-Pipeline-for-a-Static-Website'
            }
        }

        stage('Lint') {
            steps {
                echo 'ğŸ” Running HTML and CSS lint checks...'
                sh '''
                npm install -g htmlhint csslint
                htmlhint .
                csslint .
                '''
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ—ï¸ Building static site...'
                sh '''
                mkdir -p build
                cp -r * build/
                '''
            }
        }

        stage('Deploy') {
            steps {
                echo 'ğŸš€ Deploying to S3...'
                withAWS(region: "${AWS_REGION}", credentials: 'aws-creds') {
                    s3Upload(bucket: "${S3_BUCKET}", path: '/', workingDir: 'build/')
                }
            }
        }
    }

    post {
        success {
            echo 'âœ… Deployment Successful!'
        }
        failure {
            echo 'âŒ Deployment Failed. Check Jenkins logs.'
        }
    }
}
